---
interface Props {
	title: string
	src: string
	description: string
	keywords?: string[]
}
const { title, src, description, keywords } = Astro.props
---

<div class='max-w-sm rounded overflow-hidden shadow-lg'>
	<img
		class='w-full object-cover aspect-square'
		src={src}
		alt='Sunset in the mountains'
	/>
	<div class='px-6 py-4'>
		<div class='font-bold text-xl mb-2'>{title}</div>
		<p class='text-gray-700 text-base'>{description}</p>
	</div>
	<div class='px-6 pt-4 pb-2 flex flex-wrap'>
		{
            keywords && keywords.length !== 0 ?
			keywords.map((value) => (
				<span class='bg-gray-200 rounded-full px-2 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2'>
					#{value}
				</span>
			)):
            <></>
		}
	</div>
</div>
