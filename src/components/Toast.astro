---
import CheckToast from "./icons/CheckToast.astro"
import ErrorToast from "./icons/ErrorToast.astro"
import WarningToast from "./icons/WarningToast.astro"
import SendToast from "./icons/SendIcon.astro"
import InfoToast from "./icons/Info.astro"

import { getClassNameVariant } from "../libs/index"
interface Props {
	variant?: "success" | "error" | "info" | "warning" | "send"
	message: string
}
const { variant, message } = Astro.props

const iconColor = getClassNameVariant(variant)
---

<div
	id='toast-danger'
	class='fixed top-28 right-24 flex items-center w-full max-w-xs p-4 mb-4 text-gray-500 bg-white rounded-lg shadow dark:text-gray-400 dark:bg-gray-800'
	role='alert'
>
	<div
		class=`inline-flex items-center justify-center flex-shrink-0 w-8 h-8 ${iconColor}`
	>
		{variant === "success" && <CheckToast />}
		{variant === "error" && <ErrorToast />}
		{variant === "warning" && <WarningToast />}
		{variant === "send" && <SendToast />}
		{variant === "info" && <InfoToast />}
		<span class='sr-only'>Error icon</span>
	</div>
	<div class=`ms-3 text-sm font-normal ${iconColor} !bg-transparent`>
		{message}
	</div>
	<button
		type='button'
		class='ms-auto -mx-1.5 -my-1.5 bg-white text-gray-400 hover:text-gray-900 rounded-lg focus:ring-2 focus:ring-gray-300 p-1.5 hover:bg-gray-100 inline-flex items-center justify-center h-8 w-8 dark:text-gray-500 dark:hover:text-white dark:bg-gray-800 dark:hover:bg-gray-700'
		data-dismiss-target='#toast-danger'
		aria-label='Close'
	>
		<span class='sr-only'>Close</span>
		<svg
			class='w-3 h-3'
			aria-hidden='true'
			xmlns='http://www.w3.org/2000/svg'
			fill='none'
			viewBox='0 0 14 14'
		>
			<path
				stroke='currentColor'
				stroke-linecap='round'
				stroke-linejoin='round'
				stroke-width='2'
				d='m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6'></path>
		</svg>
	</button>
</div>
