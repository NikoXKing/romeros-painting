---
import SheryWilliams from "../icons/SheryWilliams.astro"
import BenjaminMoore from "../icons/BenjaminMoore.astro"
import Behr from "../icons/Behr.astro"
import Pps from "../icons/Pps.astro"
---

<section class='dark:bg-gray-900'>
	<div class='py-8 lg:py-16 mx-auto max-w-screen-xl px-4'>
		<h2
			class='mb-8 lg:mb-16 text-3xl font-bold tracking-tight leading-tight text-center text-gray-900 dark:text-white md:text-4xl uppercase'
		>
			our products
		</h2>
		<div
			class='text-gray-500 sm:gap-12 dark:text-gray-400 flex gap-6 justify-evenly items-center flex-wrap'
		>
			<SheryWilliams class='w-52' />
			<BenjaminMoore class='w-40' />
			<Behr class='w-52' />
			<Pps class='w-40' />
		</div>
	</div>
</section>
