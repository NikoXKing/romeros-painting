---
import Layout from "../layouts/Layout.astro"
import SectionCta from "../components/sections/SectionCta.astro"
import BeforeAfter from "../components/Before-After.astro"
import { imgsbefore_after } from "../libs/data"
import type { SEOProps } from "astro-seo"
const summary =
	"Top-quality residential painting in Fort Lauderdale & Miami. Interior & exterior painting for a fresh, new look. Contact us for a free estimate!"
const SEORemodeling: SEOProps = {
	title: "Romeros Painting - Remodeling",
	description: summary,
	canonical: "https://romerospaintingmaintenance.com",
	charset: "UTF-8",
	openGraph: {
		basic: {
			title: "Romeros Painting - Remodeling",
			image: "logo-romeros-painting.png",
			type: "image",
			url: "https://romerospaintingmaintenance.com"
		}
	},
	twitter: {
		title: "Romeros Painting - Remodeling",
		card: "summary_large_image",
		image: "logo-romeros-painting.png",
		description: summary,
		imageAlt: "logo-romeros-painting.png",
		creator: "Omar Martin"
	}
}
---

<Layout seo={SEORemodeling}>
	<SectionCta
		image='/imagenes/remodeling/portada.jpg'
		title='remodeling'
		body={"When clients express their desire to remodel, it signals a yearning for something fresh and exciting. At Romero’s Painting, we understand that ‘remodel’ signifies more than just a change—it’s about transformation and renewal, whether it's in a home or an entire building. Our goal is to transport you to a revitalized environment, providing a breath of fresh air with every completed project."}
		list={["remodel", "transformation", "modernize"]}
	/>
	<!-- Poner las fotos originales de remodeling en el componente. -->
	<BeforeAfter data={imgsbefore_after} />
</Layout>
